<div class="container">
    <div class="center-align">
        <h3>Get in touch with ReneCakes</h3>
    </div>
    <div class="row">
        <div class="col l6 m6 s12">
            {{#each result}}
            <h4>Address</h4>
            <address>
                {{address}}
            </address>
            <h4>Email Us</h4>
            <h5>{{email}}</h5>

            <h4>Give us a call</h4>
            <h5>{{phone}}</h5>
            {{/each}}
        </div>
        <div class="col l6 m6 s12">
            {{#each error}}
            <div class="error center-align">
                {{text}}
            </div>
            {{/each}}
            <form action="/enquery" method="POST">

                <input id="name" name="name" type="text" placeholder="Name" class="validate" value={{name}} required>

                <input id="email" name="email" type="email" placeholder="Email address" class="validate" value={{email}}
                    required>

                <input id="subject" name="subject" type="text" placeholder="Subject" class="validate" value={{subject}}
                    required>

                <textarea id="textarea1" name="message" class="materialize-textarea" placeholder="Message"
                    required>{{message}}</textarea>
                <button class="btn  waves-effect waves-light" type="submit">send</button>

            </form>
        </div>
    </div>
</div>